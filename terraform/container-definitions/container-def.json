[
  {
    "name": "challenge-web-app",
    "image": "jefferson22alcantara/challenge-job:web",
    "cpu": 10,
    "memory": 256,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/frontend-container",
        "awslogs-region": "us-east-1"
      }
    },
    "environment": [
      {
        "name": "MONGO_DB_HOST",
        "value": "${MONGO_DB_HOST}"
      },
      {
        "name": "POSTGRESS_DB_HOST",
        "value": "${POSTGRESS_DB_HOST}"
      }
    ]
